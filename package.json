{
	"name": "bases-improvements",
	"version": "1.1.0",
	"description": "A powerful plugin for enhancing and improving your Obsidian bases workflow.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"check": "prettier --check . && eslint .",
		"check:fix": "prettier --write . && eslint --fix ."
	},
	"keywords": [
		"obsidian",
		"bases",
		"plugin",
		"productivity",
		"workflow",
		"improvements"
	],
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Real1tyy"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"pnpm": {
		"overrides": {
			"obsidian": "1.8.7"
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@types/node": "^24.10.4",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.11",
		"eslint": "^9.20.0",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^15.14.0",
		"jsdom": "^27.4.0",
		"obsidian": "1.8.7",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.20.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins/utils": "^2.21.0",
		"rxjs": "^7.8.2",
		"zod": "^4.3.5"
	}
}
